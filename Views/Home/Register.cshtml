@model User
<form asp-action="Register" asp-controller="Home" method="POST">
  <span class="text-danger" asp-validation-for="FirstName"></span>
  <div class="form-group">
    <label asp-for="FirstName">First Name</label>
    <input asp-for="FirstName" type="text" class="form-control" id="FirstName" placeholder="Enter first name">
  </div>
  <span class="text-danger" asp-validation-for="LastName"></span>
  <div class="form-group">
    <label asp-for="LastName">Last Name</label>
    <input asp-for="LastName" type="text" class="form-control" id="LastName" placeholder="Enter last name">
  </div>
  <span class="text-danger" asp-validation-for="Email"></span>
  <div class="form-group">
    <label asp-for="Email">Email address</label>
    <input asp-for="Email" type="email" class="form-control" id="Email" placeholder="Enter email">
  </div>
  <span class="text-danger" asp-validation-for="Password"></span>
  <div class="form-group">
    <label asp-for="Password">Password</label>
    <input asp-for="Password" type="password" class="form-control" id="Password" placeholder="Password">
  </div>
  <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
  <div class="form-group">
    <label asp-for="ConfirmPassword">Confirm Password</label>
    <input asp-for="ConfirmPassword" type="password" class="form-control" id="ConfirmPassword" placeholder="Password">
  </div>
  <button type="submit" class="btn btn-dark text-success">Submit</button>
</form>